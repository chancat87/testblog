{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "types": ["node", "vite/client", "@biliblitz/blitz/env", "turnstile-types"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "adapters",
    "vite.config.ts",
    "server.js",
    "server-static.js"
  ]
}
