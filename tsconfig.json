{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true,
    "types": ["node", "vite/client", "@biliblitz/blitz/env"],
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.md",
    "app/**/*.mdx",
    "adapters/**/*.ts",
    "vite.config.ts",
    "server.js"
  ]
}
